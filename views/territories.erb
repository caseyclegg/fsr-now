<div class="container">
<div class="row">
<div class="col-md-12">
<h1>Territories</h1>
<table class="table table-striped">
<tr><th>Name</th><th>Recipient</th><th>&nbsp;</th></tr>
<% @territories.each do |territory| %>
  <tr>
  	<td><%= territory.name %></td>
    <td><%= territory.recipient.name if territory.recipient %></td>
		<td><a href="/territories/<%= territory.id %>/edit">Edit</a></td>
 	</tr>
<% end %>
</table> 
<br/><br/><button onclick="location.href='/territories/new'">Add Territory</button>
</div></div></div>